<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TambahBerita">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Tambah berita"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/orange2"
                android:visibility="gone"
                android:id="@+id/progressBar"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edit_text"
                android:hint="judul berita"
                android:paddingLeft="15dp"
                android:id="@+id/etJudul"
                android:drawableTint="@color/orange2"
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar"
                android:id="@+id/btnGambar"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imgGambar"
                android:layout_gravity="center"
                android:background="@color/black"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi Berita"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bg_edit_text"
                android:hint="Isi berita"
                android:paddingLeft="15dp"
                android:id="@+id/etIsiBerita"
                android:gravity="start"
                android:padding="10dp"
                android:inputType="textMultiLine"
                android:drawableTint="@color/orange2"
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah"
                android:id="@+id/btnTambah"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/orange2"
                />




        </LinearLayout>





    </LinearLayout>

</ScrollView>
